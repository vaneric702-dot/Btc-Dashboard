  <script>
    // copy to clipboard
    const copyBtn = document.getElementById('copyBtn');
    const walletAddr = document.getElementById('walletAddr').innerText.trim();

    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(walletAddr);
        copyBtn.textContent = 'Copied';
        setTimeout(()=> copyBtn.textContent = 'Copy', 1600);
      } catch (e) {
        // fallback
        const ta = document.createElement('textarea');
        ta.value = walletAddr;
        document.body.appendChild(ta);
        ta.select();
        document.execCommand('copy');
        document.body.removeChild(ta);
        copyBtn.textContent = 'Copied';
        setTimeout(()=> copyBtn.textContent = 'Copy', 1600);
      }
    });

    // view button - opens a simple block explorer search (keeps local, no external call)
    document.getElementById('viewBtn').addEventListener('click', () => {
      // show a quick modal-like copy of the wallet (native alert keeps things simple & offline)
      alert('Wallet address:\\n\\n' + walletAddr);
    });

    // Mark as Paid - simple UI feedback
    document.getElementById('notifyBtn').addEventListener('click', () => {
      const fill = document.getElementById('progressFill');
      // set to 100% because marking remaining as paid
      fill.style.width = '100%';
      document.querySelectorAll('.pill')[1].querySelector('strong').textContent = '$0';
      document.querySelectorAll('.pill')[0].querySelector('strong').textContent = '$1,000';
      document.querySelector('.card .muted')?.textContent; // noop to keep layout stable
      alert('Marked as paid: remaining $250 recorded as paid. Final payout scheduled: $250,000 to wallet.');
    });

    // Download Receipt (creates a simple text receipt)
    document.getElementById('downloadBtn').addEventListener('click', () => {
      const receipt = [
        'Payout Receipt',
        'Date: Today — Oct 31, 2025',
        '',
        'Wallet:',
        walletAddr,
        '',
        'Paid: $750',
        'Remaining: $250 (scheduled Today)',
        'Expected Payout to Wallet: $250,000',
        '',
        'Status: preparing payout'
      ].join('\\n');

      const blob = new Blob([receipt], {type: 'text/plain;charset=utf-8'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'payout-receipt.txt';
      document.body.appendChild(a);
      a.click();
      a.remove();
      URL.revokeObjectURL(url);
    });
  </script>
